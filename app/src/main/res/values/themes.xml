<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.QuranicAudioApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue_gray_light</item>
        <item name="colorPrimaryVariant">@color/blue_gray_dark</item>
        <item name="colorOnPrimary">@color/almost_white</item>
        <item name="colorSecondary">@color/bright_blue</item>
        <item name="colorSecondaryVariant">@color/bright_blue_light</item>
        <item name="colorOnSecondary">@color/almost_black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.QuranicAudioApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QuranicAudioApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.QuranicAudioApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>